@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-border table-striped">
    <thead>
        <tr>
            <th style="width:100px;">@Html.DisplayNameFor(p => p.ProductId)</th>
            <th style ="width:100px;">@Html.DisplayNameFor(p => p.Image)</th>
            <th>@Html.DisplayNameFor(p => p.Name)</th>
            <th style ="width:100px;">@Html.DisplayNameFor(p => p.Price)</th>
            <th style="width:130px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prd in Model)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img class="img-fluid" src="~/img/@prd.Image" alt="" />
                </td>
                <td>@prd.Name</td>
                <td>@prd.Price</td>
                <td>
                    <a href="#" class="btn btn-sm btn-primary">Edit</a>
                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
